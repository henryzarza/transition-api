---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---
<li>
	<a
    href={href}
    class="p-4 max-w-sm bg-cod-gray-800 rounded-xl shadow-lg flex gap-4 items-center hover:bg-red-500 hover:scale-105 transition-all"
  >
		<div class="shrink-0">
      <img class="h-12 w-12" src="https://docs.astro.build/logos/vue.svg" alt="VueJS Logo">
    </div>
    <div class="flex flex-col">
      <h2 class="text-xl font-medium text-cod-gray-100">
        {title}
        <span class="text-cod-gray-100">&rarr;</span>
      </h2>
      <p class="text-cod-gray-100">{body}</p>
    </div>
	</a>
</li>
